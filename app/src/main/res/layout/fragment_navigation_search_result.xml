<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/SEARCHBOX_LAYOUT"
        android:background="@drawable/bg_search_box_selected"
        android:padding="10dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:src="@drawable/icon_back_arrow"
            android:tag="back_button" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@null"
            android:tag="search_input"
            style="@style/SEARCHBOX_TEXT"
            android:text="장소 검색"/>
    </LinearLayout>


    <RelativeLayout
        android:tag="none_result_layout"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="200dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:text="검색 결과가 없습니다" />
    </RelativeLayout>

    <RelativeLayout
        android:tag="destination_map_layout"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="200dp">
<!--        <com.naver.maps.map.MapView-->
<!--            android:tag="map_view"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="200dp"/>-->
        <fragment
            android:tag="map_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:name="com.naver.maps.map.MapFragment" />
<!--        <FrameLayout-->
<!--            android:id="@+id/map_view_result"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="200dp"/>-->

    </RelativeLayout>

    <ListView
        android:tag="result_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:divider="@color/white"
        android:dividerHeight="0dp"
    />
</LinearLayout>